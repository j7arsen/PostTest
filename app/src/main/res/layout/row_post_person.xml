<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_margin_fourth"
    android:paddingRight="@dimen/activity_margin_fourth"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_post_person_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        fresco:actualImageScaleType="focusCrop"
        fresco:roundBottomEnd="true"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true"
        fresco:roundBottomStart="true"
        fresco:roundTopEnd="true"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundTopStart="true"
        fresco:roundedCornerRadius="3dp" />

    <TextView
        android:id="@+id/tv_post_block_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_margin_quarter"
        android:gravity="center"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_12"
        tools:text="Test" />

</LinearLayout>